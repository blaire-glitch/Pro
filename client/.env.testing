# ==============================================
# AFRIONEX CLIENT TESTING ENVIRONMENT
# ==============================================
# Copy to .env.local for local development

# ==============================================
# API ENDPOINTS
# ==============================================
# Local development
NEXT_PUBLIC_API_URL=http://localhost:5000

# For testing with Railway backend
# NEXT_PUBLIC_API_URL=https://afrionex-api.up.railway.app

# WebSocket URL (same as API URL)
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# ==============================================
# CLOUDINARY (FOR CLIENT-SIDE UPLOADS)
# ==============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=afrionex-unsigned

# ==============================================
# FIREBASE (FOR WEB PUSH NOTIFICATIONS)
# ==============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=afrionex-test.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=afrionex-test
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=afrionex-test.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# ==============================================
# GOOGLE MAPS (OPTIONAL)
# ==============================================
# Has free tier with $200/month credit
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# ==============================================
# ANALYTICS (OPTIONAL)
# ==============================================
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
